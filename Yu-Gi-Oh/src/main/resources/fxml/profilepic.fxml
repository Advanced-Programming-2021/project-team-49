<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.ProfilePicView"
      alignment="CENTER" spacing="15">
    <userData>
        <fx:reference source="controller"/>
    </userData>
    <HBox alignment="CENTER" spacing="10">
        <Button stylesheets="@../css/trianglebutton.css" rotate="180" prefHeight="100" prefWidth="50"
                onMouseClicked="#showPreviousProfilePic"/>
        <ImageView fx:id="profilePic" fitWidth="144" preserveRatio="true">
            <Image url="@../image/profile/Chara001.dds6.png" requestedWidth="144" preserveRatio="true"/>
        </ImageView>
        <Button stylesheets="@../css/trianglebutton.css" prefHeight="100" prefWidth="50"
                onMouseClicked="#showNextProfilePic"/>
    </HBox>
</VBox>
